{
  "compilerOptions": {
    "outDir": "./dist/",
    "lib": ["dom", "dom.iterable", "esnext"],
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    },
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "target": "ESNext",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "types": ["vite/client", "node"]
  },
  "ts-node": {
    "compilerOptions": {
      "module": "CommonJS"
    }
  },
  "include": [
    "types/**/*",
    "**/*.ts",
    "**/*.tsx",
    "@types",
    "setupTests.ts",
    "src/entities/limits"
  ],
  "exclude": [
    "node_modules",
    "**/*.cy.*",
    "vite.config.ts",
    "e2e",
    "**/*.test.ts",
    "**/*.test.tsx",
    "**/*.spec.ts",
    "**/*.spec.tsx",
    "playwright.config.ts"
  ],
  "typeRoots": ["declaration.d.ts", "./i18next.d.ts"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
